{
  "plugins": {},
  "git": {
    "commitMessage": "chore: release ${version}",
    "tag": true,
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true
  },
  "hooks": {
    "before:bump": "yarn build",
    "after:bump": "git checkout -- package.json",
    "after:release": "git checkout release && git reset --hard main && git push origin release -f && git checkout main"
  }
}
