{
  "git": {
    "commitMessage": "chore: release v${version}"
  },
  "github": {
    "release": true,
    "assets": ["dist/*.zip"]
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "after:bump": "yarn release:build --version=${version}",
    "after:git:release": "echo After git push, before github release",
    "after:release": ["echo Successfully released ${name} v${version} to ${repo.repository}.", "electron:package:concurrently"]
  }
}
