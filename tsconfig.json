{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types", "custom-typings"],
    "lib": ["es2019", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@silverthorn/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@silverthorn/ui": ["libs/ui/src/index.ts"],
      "@silverthorn/types": ["libs/types/src/index.ts"],
      "@silverthorn/shared/utils": ["libs/shared/utils/src/index.ts"],
      "@silverthorn/shared/data": ["libs/shared/data/src/index.ts"],
      "@silverthorn/shared/ui-utils": ["libs/shared/ui-utils/src/index.ts"],
      "@silverthorn/shared/node-utils": ["libs/shared/node-utils/src/index.ts"],
      "@silverthorn/shared/constants": ["libs/shared/constants/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
